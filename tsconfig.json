{
    "compilerOptions": {
      /* Projects */
      "incremental": true,
      "tsBuildInfoFile": "./build/build-info.tsbuildinfo",
  
      /* Language and Environment */
      "target": "es2020",
  
      /* Modules */
      "module": "es2022",
  
      /* Emit */
      "outDir": "./build",
      "removeComments": true,
  
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      /* Type Checking */
      "strict": true,
      "types": ["@webgpu/types"],
  
      /* Completeness */
      "skipLibCheck": true
    },
    "exclude": ["build"]
  }
  